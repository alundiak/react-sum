{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src"]
}
